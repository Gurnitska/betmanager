<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping package="com.gurn.bmanager.beans">

    <class name="Bet" table="Bet">
 
        <id name="id" column="id">
            <generator class="native" />
        </id>
 
        <property name="date">
            <column name="date" type = "date" length="16" not-null="true" />
        </property>
 
        <property name="league">
            <column name="league" length="16" not-null="true" />
        </property>
 
        <property name="homeCommand">
            <column name="homeCommand" length="16" not-null="true" />
        </property>
        
        <property name="guestCommand">
            <column name="guestCommand" length="16" not-null="true" />
        </property>
 
        <property name="type">
            <column name="type" length="16" not-null="true" />
        </property>
 
        <property name="value">
            <column name="value" length="16" not-null="true" />
        </property>
        
        <property name="koef">
            <column name="koef" length="16" not-null="true" />
        </property>
 
        <property name="result">
            <column name="result" length="16" not-null="true" />
        </property>
 
        <property name="score">
            <column name="score" length="16" not-null="true" />
        </property>
 
    </class>
</hibernate-mapping>